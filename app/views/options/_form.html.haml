= form_for @option do |f|
  -if @option.errors.any?
    #error_explanation
      %h2= "#{pluralize(@option.errors.count, "error")} prohibited this option from being saved:"
      %ul
        - @option.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :asset_id
    = f.number_field :asset_id
  .field
    = f.label :option_type
    = f.text_field :option_type
  .field
    = f.label :expiration
    = f.date_select :expiration
  .field
    = f.label :strike
    = f.number_field :strike
  .actions
    = f.submit 'Save'
